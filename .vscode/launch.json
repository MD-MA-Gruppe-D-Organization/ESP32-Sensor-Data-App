    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to Hermes application",
            "cwd": "${workspaceFolder}/Expo",
            "type": "reactnativedirect",
            "request": "attach"
        },
        {
            "cwd": "${workspaceFolder}/Expo",
            "name": "Attach to Packager",
            "type": "reactnativedirect",
            "request": "attach",
            "port": 8082,  // Port Metro Bundler is using
            "sourceMaps": true,

            "skipFiles": [
                "<node_internals>/**"
            ]
        },
    ]
}